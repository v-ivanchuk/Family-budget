@model Family_budget.Models.UserExpense

@{
    ViewData["Title"] = "Delete expense";
}

<h3>Are you sure you want to delete this expense?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Expense)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Expense)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CountDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CountDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="User.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @if (Model != null && Model.User != null)
        {
            <a asp-action="Index" asp-route-id="@Model.User.Id">Back to List</a>
        }
    </form>
</div>
